{
  "name": "tag-cli",
  "version": "0.1.0",
  "description": "A CLI tool for organizing development projects by tagging directories",
  "type": "module",
  "bin": {
    "tag": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "typecheck": "bun --bun tsc --noEmit",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "format": "biome format --write"
  },
  "keywords": ["cli", "tags", "project-organization", "development"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@trpc/server": "^11.0.0",
    "trpc-cli": "^0.8.0",
    "zod": "^4.0.0",
    "chalk": "^5.3.0",
    "sqlite3": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.0",
    "typescript": "^5.0.0"
  }
}
