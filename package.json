{
  "name": "tag-cli",
  "version": "0.1.0",
  "description": "A CLI tool for organizing development projects by tagging directories",
  "type": "module",
  "bin": {
    "tag": "./dist/tag"
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "install": "bun run scripts/install.ts",
    "dev": "bun run src/cli.ts",
    "test": "bun test",
    "typecheck": "bun --bun tsc --noEmit",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "check": "biome check",
    "check:fix": "biome check --write",
    "format": "biome format --write"
  },
  "keywords": [
    "cli",
    "tags",
    "project-organization",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@inkjs/ui": "^2.0.0",
    "@libsql/client": "^0.15.15",
    "@trpc/server": "^11.5.1",
    "@types/object-hash": "^3.0.6",
    "chalk": "^5.6.2",
    "cli-table": "^0.3.11",
    "drizzle-orm": "^0.44.5",
    "ink": "^6.3.0",
    "ink-table": "^3.1.0",
    "nanoid": "^5.1.5",
    "react": "^19.1.1",
    "replace-homedir": "^2.0.0",
    "sqlite3": "^5.1.7",
    "trpc-cli": "^0.11.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/bun": "^1.3.2",
    "@types/cli-table": "^0.3.4",
    "@types/node": "^24.3.1",
    "@types/sqlite3": "^5.1.0",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2"
  }
}
